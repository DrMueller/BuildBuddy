{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false, // Otherwise knockout failes
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "typings/tsd.d.ts"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}